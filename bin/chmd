#!/usr/bin/env ruby
# frozen_string_literal: true

require 'chmd'
require 'optparse'

OptionParser.new do |opt|
  opt.banner = "Usage: #{$PROGRAM_NAME} [options]"
  opt.separator 'options are:'
  opt.on('-h', '--help', 'Show this message') do
    puts opt
    exit
  end
  opt.parse!(ARGV)
end

puts Chmd.make
